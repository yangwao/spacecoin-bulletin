{{!< default}}

{{#post}}
    <main id="gh-main" class="gh-main">
        <article class="gh-article {{post_class}}">
            {{#if @page.show_title_and_feature_image}}
                <header class="gh-article-header gh-canvas{{#match @custom.feature_image_width "Full"}} image-full{{else match @custom.feature_image_width "=" "Wide"}} image-wide{{/match}}">
                    <h1 class="gh-article-title">{{@page.title}}</h1>
                    {{#if @page.custom_excerpt}}
                        <p class="gh-article-excerpt">{{@page.custom_excerpt}}</p>
                    {{/if}}
                    {{#if @page.feature_image}}
                        <figure class="gh-article-image">
                            <img 
                                src="{{@page.feature_image}}" 
                                alt="{{@page.title}}"
                                class="kg-image"
                            />
                            {{#if @page.feature_image_caption}}
                                <figcaption>{{@page.feature_image_caption}}</figcaption>
                            {{/if}}
                        </figure>
                    {{/if}}
                </header>
            {{/if}}

            <div class="gh-content gh-canvas">
                {{@page.html}}
            </div>
        </article>
    </main>
{{/post}}