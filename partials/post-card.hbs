{{!-- Post card partial --}}
<article class="spacecoin-post-card" style="--accent-color: {{accent_color}}; --text-color: {{text_color}};">
    {{#if feature_image}}
        <div class="post-card-image">
            <img src="{{feature_image}}" alt="{{title}}" class="kg-image" />
        </div>
    {{/if}}
    
    <div class="post-card-content">
        <h2 class="post-card-title">
            <a href="{{url}}">{{title}}</a>
        </h2>
        
        {{#if excerpt}}
            <p class="post-card-excerpt">{{excerpt}}</p>
        {{/if}}
        
        <div class="post-card-meta">
            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
            {{#if reading_time}}
                <span class="reading-time">{{reading_time}} min read</span>
            {{/if}}
        </div>
    </div>
</article>

<style>
.spacecoin-post-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s;
    margin-bottom: 2rem;
}

.spacecoin-post-card:hover {
    transform: translateY(-4px);
}

.post-card-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
}

.post-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.post-card-content {
    padding: 1.5rem;
}

.post-card-title {
    margin: 0 0 1rem;
    font-size: 1.5rem;
}

.post-card-title a {
    color: var(--text-color);
    text-decoration: none;
    transition: color 0.2s;
}

.post-card-title a:hover {
    color: var(--accent-color);
}

.post-card-excerpt {
    color: var(--text-color);
    opacity: 0.8;
    margin: 0 0 1rem;
    line-height: 1.6;
}

.post-card-meta {
    display: flex;
    gap: 1rem;
    color: var(--text-color);
    opacity: 0.7;
    font-size: 0.9rem;
}
</style> 